@page "/ConsultaPrioridades"
@inject PrioridadesBLL prioridadesBLL;

<PageTitle>Consulta Prioridades</PageTitle>
<h2><b>Lista de Prioridades</b></h2>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Días de compromiso</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ListaPrioridades)
            {
                <tr>
                    <td><a href="Prioridad/@item.PrioridadId">@item.PrioridadId</a></td>
                    <td>@item.Descripcion</td>
                    <td>@item.DiasCompromiso</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {

    public Prioridad prioridad { get; set; } = new Prioridad();
    public List<Prioridad> ListaPrioridades { get; set; } = new List<Prioridad>();

    protected override void OnInitialized()
    {
        ListaPrioridades = prioridadesBLL.Listar(l => true);
    }
}