@page "/ConsultaClientes"
@inject ClienteBLL ClientesBLL;

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>RNC</th>
                <th>Teléfono</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Dirección</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ListaClientes)
            {
                <tr>
                    <td><a href="Cliente/@item.ClienteId">@item.ClienteId</a></td>
                    <td>@item.Nombres</td>
                    <td>@item.RNC</td>
                    <td>@item.Telefono</td>
                    <td>@item.Celular</td>
                    <td>@item.Email</td>
                    <td>@item.Direccion</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {

    public Cliente clientes { get; set; } = new Cliente();
    public List<Cliente> ListaClientes { get; set; } = new List<Cliente>();

    protected override void OnInitialized()
    {
        ListaClientes = ClientesBLL.Listar(l => true);
    }
}