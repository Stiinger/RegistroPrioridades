@page "/Clientes"
@inject ClienteServices clienteServices

<PageTitle>Clientes</PageTitle>
<div class="container">
	<div class="card shadow-lg">
		<div class="card-header">
			<h3><strong>Clientes</strong></h3>
			<div class="row">
				<div class="col-2">
					<a href="/CrearCliente" class="btn btn-success bi bi-file-earmark-diff-fill"> Crear</a>
				</div>
				<div class="col-2">
					<a href="/DetallesClientes" class="btn btn-secondary bi bi-card-list"> Detalles</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>RNC</th>
						<th>Tel&eacute;fono</th>
						<th>Direcci&oacute;n</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var cliente in listaClientes)
					{
						<tr>
							<td>@cliente.ClienteId</td>
							<td>@cliente.Nombres</td>
							<td>@cliente.RNC</td>
							<td>@cliente.Telefono</td>
							<td>@cliente.Direccion</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@code {
	public List<Clientes> listaClientes = new List<Clientes>();

	protected override void OnInitialized()
	{
		Expression<Func<Clientes, bool>> criterio = cliente => cliente.ClienteId > 0;
		listaClientes = clienteServices.Listar(criterio);
	}
}